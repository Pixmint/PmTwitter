# Telegram Bot Token (ОБЯЗАТЕЛЬНО)
BOT_TOKEN=your_bot_token_here

# Режим работы (polling или webhook)
MODE=polling

# Whitelist пользователей (через запятую, необязательно)
# Если не задано - доступ для всех
TELEGRAM_USER_IDS=

# Отвечать в группах без упоминания (0 или 1)
REPLY_IN_GROUPS=0

# В группах - удалять ссылку пользователя и отправлять только твит (0 или 1)
REMOVE_MESSAGE_IN_GROUPS=1

# Сжимать медиа (0 или 1)
COMPRESS_MEDIA=1

# Максимальный размер медиа в МБ
MAX_MEDIA_MB=20

# URL альтернативного фронтенда
FX_BASE_URL=https://fxtwitter.com

# Показывать медиа в quoted твитах (0 или 1)
INCLUDE_QUOTED_MEDIA=0

# Язык перевода по умолчанию (off, ru, en и т.д.)
DEFAULT_TRANSLATE_LANG=off

# Уровень логирования (DEBUG для отладки, INFO для продакшена)
LOG_LEVEL=INFO