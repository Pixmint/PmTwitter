# ===================================
# PMTwitter Bot Configuration
# ===================================

# ОБЯЗАТЕЛЬНО: Telegram Bot Token от @BotFather
BOT_TOKEN=

# ===================================
# Режим работы
# ===================================

# polling или webhook (webhook в разработке)
MODE=polling

# ===================================
# Безопасность и Rate Limiting
# ===================================

# Whitelist пользователей (через запятую)
# Если пусто - доступ для всех
# Пример: TELEGRAM_USER_IDS=123456,789012
TELEGRAM_USER_IDS=

# Минимальная задержка между запросами (секунды)
RATE_LIMIT_SECONDS=5

# Минимальная задержка между запросами в одном чате (секунды)
RATE_LIMIT_CHAT_SECONDS=3

# ===================================
# Поведение в группах
# ===================================

# Отвечать в группах без упоминания бота
# 1 = отвечать всегда
# 0 = только при @mention
REPLY_IN_GROUPS=1

# Удалять исходное сообщение пользователя в группах
# 1 = удалять (бот показывает только твит)
# 0 = оставлять
REMOVE_MESSAGE_IN_GROUPS=1

# ===================================
# Форматирование сообщений
# ===================================

# Отвечать реплаем на исходное сообщение
# 1 = использовать reply
# 0 = отправлять обычное сообщение
REPLY_TO_MESSAGE=0

# Показывать подпись над медиа
# 1 = подпись сверху (show_caption_above_media=True)
# 0 = подпись снизу
CAPTION_ABOVE_MEDIA=1

# ===================================
# Медиа обработка
# ===================================

# Сжимать медиа файлы
# 1 = включить сжатие (Pillow для фото, ffmpeg для видео)
# 0 = отправлять как есть
COMPRESS_MEDIA=1

# Максимальный размер медиа в МБ (после сжатия)
MAX_MEDIA_MB=20

# Показывать медиа из quoted tweets
# 1 = показывать (может быть много медиа)
# 0 = скрывать (только текст цитаты)
INCLUDE_QUOTED_MEDIA=0

# ===================================
# Источник данных
# ===================================

# URL альтернативного Twitter фронтенда
# Поддерживается: fxtwitter.com, vxtwitter.com, fixupx.com
FX_BASE_URL=https://fxtwitter.com

# ===================================
# Перевод
# ===================================

# Язык перевода по умолчанию
# off = выключен
# Поддерживаемые: ru, en, uk, es, fr, de, it, pt, ja, ko, zh, ar, tr, pl, nl
DEFAULT_TRANSLATE_LANG=off

# ===================================
# Логирование и отладка
# ===================================

# Уровень логирования
# DEBUG = детальная отладка (все запросы, парсинг)
# INFO = обычная работа (основные события)
# WARNING = только предупреждения
# ERROR = только ошибки
LOG_LEVEL=INFO

# Сохранять HTML твита в /tmp для отладки
# 1 = сохранять (файлы: /tmp/tweet_ID.html)
# 0 = не сохранять
DUMP_TWEET_HTML=0
